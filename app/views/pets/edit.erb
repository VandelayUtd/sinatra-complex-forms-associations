<h1>Update Pet</h1>

<form method='POST' action="/pets/<%=@pet.id%>">
<input type='hidden' id='hidden' name='_method' value='patch'>
<h2>Edit Your Pet Here:</h2>
<input type='text' name='pet[name]' id='pet_name' value='<%= @pet.name %>'>
<h2>Edit Your Owner here:</h2>
<% Owner.all.each do |owner| %>
<input type='radio' name="pet[owner_id]" id="<%= owner.id %>" value="<%= owner.id %>" <%= 'checked' if @pet.owner == owner %>> <%=owner.name%> <br>
<%end%>
<h2>Create a New Owner</h2>
<input type='text' name='owner[name]' id='owner_name'>
<button type='submit' value='Update Pet'>Update Pet:</button>>
</form>

